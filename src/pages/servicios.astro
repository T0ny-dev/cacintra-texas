---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.jsx';
import Hero from '../components/Hero.jsx';
import ImageSection from '../components/ImageSection.astro';
import ImageLeft from '../components/ImageLeft.astro'
import Footer from '../components/footer.astro';
import MobileNavbar from "../components/MobileNavbar.jsx"
---

<Layout title="CANACINTRA - Servicios">
  <Navbar client:load/>
  <MobileNavbar client:load />
  <Hero image={"./logowhite.svg"} title={"SERVICIOS"} background={"./sobrenosotros.jpg"}/>
  <ImageSection
  title="Servicios de asesoramiento empresarial" 
	content="CANACINTRA Texas brinda orientación y asistencia a las empresas locales en cuestiones relacionadas con la gestión empresarial, estrategias de crecimiento"
	image="./asesoria.jpg"
  />
  <ImageLeft
  title="Servicios de capacitación y formación" 
	content="CANACINTRA Texas son una actividad en la que se proporcionan programas de entrenamiento y educación a las empresas locales para mejorar las habilidades y conocimientos. Estos programas pueden abarcar diversos temas, como habilidades técnicas, liderazgo, comunicación y trabajo en equipo, lo que puede ayudar a las empresas a aumentar su eficiencia y productividad."
	image="./educacion.jpg"
  />
  <Footer/>
</Layout>